# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Upload Configuration
MAX_CONTENT_LENGTH=524288000  # 500MB in bytes
UPLOAD_FOLDER=app/uploads
PROCESSED_FOLDER=app/processed

# Audio Processing
DEFAULT_BITRATE=192
DEFAULT_SAMPLE_RATE=44100

# YouTube Data API v3 설정
YOUTUBE_API_KEY=your_youtube_api_key_here

# Google Cloud 설정 (Lyria AI)
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# API 설정
ALLOWED_EXTENSIONS=mp3,wav,m4a,flac,mp4,webm
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,bmp,gif

# 음악 생성 설정
DEFAULT_MUSIC_DURATION=30
MAX_MUSIC_DURATION=300
LYRIA_MODEL=gemini-1.5-pro
